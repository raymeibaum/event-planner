angular
  .module('eventPlanner')
  .component('userShow', {
    templateUrl: '<%= asset_path("components/user/show/userShow") %>',
    controller: UserShowController
  });

UserShowController.$inject = ['$stateParams', 'UserService'];

function UserShowController($stateParams, UserService) {
  var vm = this;

  vm.user = {};

	activate()

	function activate() {
		getUser()
	}

	function getUser() {
		UserService
			.getUser($stateParams.id)
			.then(function assignUser(response) {
				console.log(response.data);
				vm.user = response.data;
			});
	}
}
