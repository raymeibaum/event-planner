angular
  .module('eventPlanner')
  .component('userShow', {
    templateUrl: '<%= asset_path("components/user/show/userShow") %>',
    controller: UserShowController
  });

UserShowController.$inject = ['$stateParams', 'UserService', 'EventService'];

function UserShowController($stateParams, UserService, EventService) {
  var vm = this;

  vm.user = {};
  vm.comments = [];
  vm.event = {};
  vm.addToCommentsArray = addToCommentsArray;

	activate()

	function activate() {
		getUser()
        getEvent()
	}

	function getUser() {
		UserService
			.getUser($stateParams.id)
			.then(function assignUser(response) {
				console.log(response.data);
				vm.user = response.data;
			});
	}
    function getEvent() {
        EventService
			.getEvent($stateParams.id)
			.then(function assignEvent(response) {
                console.log(response.data);
				vm.event = response.data.eventful;
				vm.comments = [];
				response.data.comments.forEach(addToCommentsArray)
			})
	}
    function addToCommentsArray(comment) {
        vm.comments.push(comment);
    }
}
